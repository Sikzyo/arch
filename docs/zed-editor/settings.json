{
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Frappé"
  },
  "icon_theme": "Material Icon Theme",
  "theme_overrides": {
    "Catppuccin Frappé": {
      "border.variant": "#303446",
      "border": "#303446"
    },
    "Catppuccin Latte": {
      "border.variant": "#EEF1F5",
      "border": "#EEF1F5"
    }
  },

  "ui_font_size": 14/16,
  "title_bar": {
    "show_onboarding_banner": false
  },
  "tab_bar": {
    "show": false
  },
  "scrollbar": {
    "show": "never"
  },

  "agent": {
    "dock": "left"
  },
  "debugger": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false,
    "default_width": 300,
    "starts_open": false,
    "scrollbar": {
      "show": "never"
    },
    "indent_guides": {
      "show": "never"
    }
  },
  "outline_panel": {
    "indent_guides": {
      "show": "never"
    }
  },

  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 12,
  "gutter": {
    "min_line_number_digits": 0
  },
  "multi_cursor_modifier": "cmd_or_ctrl"
}
